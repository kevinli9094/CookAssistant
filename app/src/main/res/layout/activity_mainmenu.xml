<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:text="Main Menu"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_weight="0.01"
        tools:text="Main Menu"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:textColor="@android:color/background_dark"
        android:textAlignment="center"
        android:layout_marginTop="20dp" />

    <Button
        android:text="Known Dishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Known_Dishes_button"
        android:layout_weight="0.01"
        tools:text="Known Dishes"
        android:elevation="0dp"
        android:layout_marginTop="30dp" />

    <Button
        android:text="Unknown Dishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Unknown_Dishes_Button"
        android:layout_weight="0.01"
        tools:text="Unknown Dishes" />

    <Button
        android:text="Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Search_Button"
        android:layout_weight="0.01"
        tools:text="Search" />

    <Button
        android:text="Shopping List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Shopping_List_Button"
        android:layout_weight="0.01"
        tools:text="Shopping List" />

    <Button
        android:text="tag manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tagManagerButton"
        android:layout_weight="0.01" />

    <Button
        android:text="Log Out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Log_Out_Button"
        android:layout_weight="0.01"
        tools:text="Log Out" />

    <Button
        android:text="Quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Quit_Button"
        android:layout_weight="0.01"
        tools:text="Quit" />
</LinearLayout>